@model SchoolSystem.Models.Class

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja Klasy</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTeacher" class="control-label"></label>
                <select asp-for="IdTeacher" class="form-control" asp-items="ViewBag.IdTeacher"></select>
                <span asp-validation-for="IdTeacher" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Anuluj</a>
            </div>
        </form>
    </div>
</div>